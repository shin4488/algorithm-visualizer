{
  "name": "algorithm-visualizer",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "parcel src/ja/index.html src/en/index.html src/index.html --dist-dir public",
    "build": "parcel build src/ja/index.html src/en/index.html src/index.html --dist-dir public",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": "prettier --write"
  },
  "dependencies": {
    "@mantine/core": "^8.3.1",
    "@mantine/hooks": "^8.3.1",
    "i18next": "^25.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ga4": "^2.1.0",
    "react-i18next": "^15.7.3"
  },
  "devDependencies": {
    "@parcel/resolver-default": "^2.16.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.24",
    "@types/react-dom": "^18.2.9",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^16.1.6",
    "parcel": "^2.12.0",
    "prettier": "^3.6.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.44.0",
    "vitest": "^1.5.0"
  }
}
